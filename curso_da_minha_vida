
CREATE DATABASE db_curso_da_minha_vida;
USE db_curso_da_minha_vida;


CREATE TABLE tb_categoria (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    descricao VARCHAR(500) NOT NULL
);


INSERT INTO tb_categoria (nome, descricao) VALUES 
("Programação", "Cursos focados em desenvolvimento de software."),
("Design", "Cursos de design gráfico, UI/UX e artes visuais."),
("Negócios", "Cursos de gestão, marketing e empreendedorismo."),
("Idiomas", "Cursos de aprendizado de línguas."),
("Saúde", "Cursos da área da saúde, bem-estar e primeiros socorros.");


CREATE TABLE tb_cursos (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    carga_horaria INT NOT NULL,
    instrutor VARCHAR(255) NOT NULL,
    valor DECIMAL(10,2) NOT NULL,
    categoria_id BIGINT NOT NULL,
    FOREIGN KEY (categoria_id) REFERENCES tb_categoria(id)
);


INSERT INTO tb_cursos (nome, carga_horaria, instrutor, valor, categoria_id) VALUES
("Java Completo 2025", 60, "Nelio Alves", 899.90, 1),
