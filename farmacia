SELECT * FROM tb_produtos
WHERE valor > 50;


SELECT * FROM tb_produtos
WHERE valor BETWEEN 5 AND 60;


SELECT * FROM tb_produtos
WHERE nome LIKE "%c%" OR nome LIKE "%C%";

SELECT p.nome AS Produto, p.valor, c.nome AS Categoria, c.tarja
FROM tb_produtos p
INNER JOIN tb_categorias c
ON p.categoria_id = c.id;

SELECT p.nome, p.valor, c.nome AS Categoria
FROM tb_produtos p
INNER JOIN tb_categorias c
ON p.categoria_id = c.id
WHERE c.nome = "Anti-inflamatorios";
