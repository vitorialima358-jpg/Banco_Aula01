
CREATE DATABASE db_farmacia_bem_estar;
USE db_farmacia_bem_estar;

CREATE TABLE tb_categorias (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    tarja VARCHAR(255) NOT NULL
);


INSERT INTO tb_categorias (nome, tarja) VALUES ("Antihipertensivos", "Vermelha");
INSERT INTO tb_categorias (nome, tarja) VALUES ("Analgesicos", "Sem Tarja");
INSERT INTO tb_categorias (nome, tarja) VALUES ("Anti-inflamatorios", "Vermelha");
INSERT INTO tb_categorias (nome, tarja) VALUES ("Ansioliticos", "Preta");
INSERT INTO tb_categorias (nome, tarja) VALUES ("Relaxantes Musculares", "Vermelha");

CREATE TABLE tb_produtos (
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    fabricante VARCHAR(255),
    valor DECIMAL(10,2) NOT NULL,
    estoque INT NOT NULL,
    categoria_id BIGINT NOT NULL,
    FOREIGN KEY (categoria_id) REFERENCES tb_categorias(id)
);


