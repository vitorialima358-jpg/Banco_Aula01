CREATE DATABASE db_generation_game_online;

USE db_generation_game_online;


CREATE TABLE tb_classes(
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    poderBase INT NOT NULL,
    tipo VARCHAR(255) NOT NULL
);


INSERT INTO tb_classes (nome, poderBase, tipo) VALUES ("Guerreiro", 1500, "Terra");
INSERT INTO tb_classes (nome, poderBase, tipo) VALUES ("Mago", 1300, "Fogo");
INSERT INTO tb_classes (nome, poderBase, tipo) VALUES ("Arqueiro", 1100, "Ar");
INSERT INTO tb_classes (nome, poderBase, tipo) VALUES ("Cavaleiro", 1800, "Luz");
INSERT INTO tb_classes (nome, poderBase, tipo) VALUES ("Assassino", 1600, "Sombras");

CREATE TABLE tb_personagens(
    id BIGINT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(255) NOT NULL,
    poder_ataque INT NOT NULL,
    poder_defesa INT NOT NULL,
    habilidade_especial VARCHAR(255),
    classeid BIGINT,
    FOREIGN KEY (classeid) REFERENCES tb_classes(id)
);


